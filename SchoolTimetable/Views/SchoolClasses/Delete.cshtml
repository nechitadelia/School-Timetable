@using School_Timetable.ViewModels

@model DeleteSchoolClassViewModel

<div class="form-container">
    <div class="back-button-container">
        <a class="back-button" asp-area="" asp-controller="SchoolClasses" asp-action="Index">Back to classes</a>
    </div>

    <h1>Delete Class</h1>

    <form method="post" id="deleteClassform">
        <div class="mt-3">
            <label for="YearOfStudy" class="form-label">Year of study</label>
            <select asp-for="YearOfStudy" class="schoolclass-dropdown" id="YearOfStudy">
                @foreach (int year in Model.AllSchoolyears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label for="ClassLetter" class="form-label">ClassLetter</label>
            <select disabled asp-for="ClassLetter" class="schoolclass-dropdown" id="ClassLetter">
                @for (int i = 0; i < Model.AllExistingLetters.Count; i++)
                {
                    if (Model.AllExistingLetters[i] == '/')
                    {
                        <option value="@Model.AllSchoolyears[i]">No existing classes</option>
                    }
                    else
                    {
                        <option value="@Model.AllSchoolyears[i]">@Model.AllExistingLetters[i]</option>
                    }
                }
            </select>
        </div>
    </form>

    <div class="mt-3">
        <button type="submit" class="delete-button" id="deleteClassButton">
            Delete Class
        </button>
    </div>
</div>

<script src="~/js/DeleteSchoolClass.js" asp-append-version="true"></script>