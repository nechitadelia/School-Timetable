@using School_Timetable.ViewModels

@model SchoolSubject

@if (Model is null)
{
	<p>No subject was found</p>
}
else
{
	<div class="form-container">
		<div class="back-button-container">
			<a class="back-button" asp-area="" asp-controller="SchoolSubjects" asp-action="Index">Back to list</a>
		</div>

		<h1>Delete School Subject</h1>

		@if (TempData["Error"] != null)
		{
			<div class="col-md-12 alert alert-danger">
				<span id="span-error">Sorry! @TempData["Error"]</span>
			</div>
		}

		<form method="post" id="deleteSubjectform">
			<input type="hidden" asp-for="Id" value="@Model.Id" readonly />

			<div class="mt-3">
				<label for="Name" class="form-label">Subject Name</label>
				<input type="text" class="form-control" asp-for="Name" id="Name" readonly />
			</div>

			<div class="mt-3">
				<label for="HoursPerWeek" class="form-label">Hours/week</label>
				<input type="text" class="form-control" asp-for="HoursPerWeek" id="HoursPerWeek" readonly />
			</div>
		</form>

		<div class="delete-button-subject">
			<div>
				<button type="submit" class="delete-button" id="deleteSubjectButton" asp-controller="SchoolSubjects" asp-action="Delete">Confirm</button>
			</div>
		</div>
	</div>
}

<script src="~/js/DeleteSchoolSubject.js" asp-append-version="true"></script>