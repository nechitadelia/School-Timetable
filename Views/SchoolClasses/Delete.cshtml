@using School_Timetable.Models.Entities

@{
    var allExistingLetters = ViewData["allExistingLetters"] as List<char>;
    List<int> schoolyears = new List<int> { 5, 6, 7, 8 };
}

@model School_Timetable.Models.SchoolClassViewModel

<h1>Delete Class</h1>

<form method="post" id="deleteClassform">
    <div class="mt-3">
        <label for="YearOfStudy" class="form-label">Year of study</label>
        <select asp-for="YearOfStudy" class="schoolclass-dropdown">
            @foreach (int year in schoolyears)
            {
                <option value="@year">@year</option>
            }
        </select>
    </div>
   
    <div class="mt-3">
        <label for="ClassLetter" class="form-label">ClassLetter</label>
        <select disabled asp-for="ClassLetter" class="schoolclass-dropdown" id="ClassLetter">
            @for (int i = 0; i < allExistingLetters.Count; i++)
            {
                <option value="@schoolyears[i]">@allExistingLetters[i]</option>
            }
        </select>
    </div>
</form>

<div class="mt-3">
    <button type="submit" class="btn btn-danger" id="deleteClassButton">
        Delete Class
    </button>
</div>

<div class="mt-3">
    <button class="btn btn-info mt-3">
        <a class="text-white text-decoration-none" asp-area="" asp-controller="SchoolClasses" asp-action="Index">Back to the list</a>
    </button>
</div>

<script src="~/js/DeleteSchoolClass.js" asp-append-version="true"></script>