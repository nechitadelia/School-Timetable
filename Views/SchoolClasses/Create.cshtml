@using School_Timetable.Models.Entities

@{
    var allAvailableLetters = ViewData["allAvailableLetters"] as List<char>;
    List<int> schoolyears = new List<int> { 5, 6, 7, 8 };
}

@model School_Timetable.Models.SchoolClassViewModel

<div class="form-container">
    <div class="back-button-container">
        <a class="back-button" asp-area="" asp-controller="SchoolClasses" asp-action="Index">Back to classes</a>
    </div>

    <h1>Add Class</h1>

    <form method="post" id="createClassform">
        <div class="mt-3">
            <label for="YearOfStudy" class="form-label">Year of study</label>
            <select asp-for="YearOfStudy" class="schoolclass-dropdown" id="YearOfStudy">
                @foreach (int year in schoolyears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label for="ClassLetter" class="form-label">Class Letter</label>
            <select disabled asp-for="ClassLetter" class="schoolclass-dropdown" id="ClassLetter">
                @for (int i = 0; i < allAvailableLetters.Count; i++)
                {
                    <option value="@schoolyears[i]">@allAvailableLetters[i]</option>
                }
            </select>
        </div>
    </form>

    <div class="mt-3">
        <button type="submit" class="create-button" id="createClassButton">
            Add Class
        </button>
    </div>
</div>

<script src="~/js/CreateSchoolClass.js" asp-append-version="true"></script>