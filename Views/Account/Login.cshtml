@model School_Timetable.ViewModels.LoginViewModel

<div class="login-container">
	<div class="back-button-container">
		<a class="back-button" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
	</div>

	<h1>Log in to your account</h1>

	<form method="post" asp-action="Login">
		<div class="mt-3">
			<label class="form-label" asp-for="EmailAddress">Email Address</label>
			<input type="email" asp-for="EmailAddress" class="form-control" id="EmailAddress" />
			<span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>
		</div>
		<div class="mt-3">
			<label class="form-label" asp-for="Password">Password</label>
			<input type="password" asp-for="Password" class="form-control" id="Password" />
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
		</div>
		<div class="mt-3">
			<button type="submit" class="edit-button" id="login">Log in</button>
		</div>
	</form>

	<div class="view-as">
		<p>View site as:</p>
		<div>
			<button id="admin-login">Admin</button>
			<button id="user1-login">User 1</button>
			<button id="user2-login">User 2</button>
		</div>
	</div>
</div>

<script src="~/js/Login.js" asp-append-version="true"></script>