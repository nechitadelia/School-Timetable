@using School_Timetable.ViewModels

@model ChangePasswordUserViewModel

<div class="info-container pass-container">
	<div class="form-container">
		<div class="back-button-container">
			<a class="back-button" asp-area="" asp-controller="Account" asp-action="Info">Back to info</a>
		</div>

		<h1>Change password</h1>

		@if (TempData["Error"] != null)
		{
			<div class="alert alert-danger">
				<span id="span-error">Sorry! @TempData["Error"]</span>
			</div>
		}

		<form method="post" id="editPasswordform">
			<input type="hidden" asp-for="Id" value="@Model.Id" readonly />

			<div class="mt-3">
				<label for="lastName" class="form-label">Current Password</label>
				<input type="password" class="form-control" asp-for="CurrentPassword" id="CurrentPassword" />
				<span asp-validation-for="CurrentPassword" class="text-danger"></span>
			</div>

			<div class="mt-3">
				<label for="lastName" class="form-label">New Password</label>
				<input type="password" class="form-control" asp-for="NewPassword" id="NewPassword" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>

			<div class="mt-3">
				<label for="lastName" class="form-label">Confirm New Password</label>
				<input type="password" class="form-control" asp-for="ConfirmNewPassword" id="ConfirmNewPassword" />
				<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
			</div>

			<div class="save-button-user">
				<button type="submit" class="edit-button" id="editPasswordButton" asp-controller="Account" asp-action="ChangePassword">Save</button>
			</div>
		</form>
	</div>
</div>