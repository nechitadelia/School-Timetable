@using School_Timetable.ViewModels

@model AppUserViewModel

<div class="form-container">
	<div class="back-button-container">
		<a class="back-button" asp-area="" asp-controller="Account" asp-action="AllUsers">Back to list</a>
	</div>

	<h1>Delete User</h1>

	<form method="post" id="deleteUserform">
		<input type="hidden" asp-for="Id" value="@Model.Id" readonly />

		<div class="mt-3">
			<label for="SchoolName" class="form-label">School Name</label>
			<input type="text" class="form-control" asp-for="SchoolName" id="SchoolName" readonly />
		</div>

		<div class="mt-3">
			<label for="County" class="form-label">County</label>
			<input type="text" class="form-control" asp-for="County" id="County" readonly />
		</div>

		<div class="mt-3">
			<label for="City" class="form-label">City</label>
			<input type="text" class="form-control" asp-for="City" id="City" readonly />
		</div>

		<div class="mt-3">
			<label for="EmailAddress" class="form-label">Email Address</label>
			<input type="text" class="form-control" asp-for="EmailAddress" id="EmailAddress" readonly />
		</div>
	</form>

	<div class="delete-button-user">
		<div>
			<button type="submit" class="delete-button" id="deleteUserButton" asp-controller="Account" asp-action="DeleteUser">Confirm</button>
		</div>
	</div>
</div>

<script src="~/js/DeleteUser.js" asp-append-version="true"></script>