@using School_Timetable.Models.Entities

@{
	var professorSubject = ViewData["professorSubject"] as SchoolSubject;
}


@model School_Timetable.Models.Entities.Professor


@if (Model is null)
{
	<p>No professor was found with this Id</p>
}
else
{
	<div class="form-container">
		<div class="back-button-container">
			<a class="back-button" asp-area="" asp-controller="Professors" asp-action="Index">Back to list</a>
		</div>

		<h1>Delete Professor</h1>

		<form method="post" id="deleteProfessorform">
			<div class="hidden-elem">
				<input asp-for="Id" value="@Model.Id" readonly />
			</div>

			<div class="mt-3">
				<label for="firstName" class="form-label">First Name</label>
				<input type="text" class="form-control" asp-for="FirstName" id="firstName" readonly />
			</div>

			<div class="mt-3">
				<label for="lastName" class="form-label">Last Name</label>
				<input type="text" class="form-control" asp-for="LastName" id="lastName" readonly />
			</div>

			<div class="mt-3">
				<label class="form-label">Subject</label>
				<input type="text" class="form-control" asp-for="@professorSubject.Name" readonly />
			</div>
		</form>

		<div class="delete-button-professor">
			<div>
				<button type="submit" class="delete-button" id="deleteProfessorButton" asp-controller="Professors" asp-action="Delete">Confirm</button>
			</div>
		</div>
	</div>
}

<script src="~/js/DeleteProfessor.js" asp-append-version="true"></script>