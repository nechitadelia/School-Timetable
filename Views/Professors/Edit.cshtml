@using School_Timetable.Models.Entities

@{
	var professorSubject = ViewData["professorSubject"] as SchoolSubject;
}

@model School_Timetable.Models.Entities.Professor

<h1>Edit Professor</h1>

<form method="post" id="editProfessorform">
	<div class="mt-3">
		<label class="form-label">Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>

	<div class="mt-3">
		<label for="firstName" class="form-label">First Name</label>
		<input type="text" class="form-control" asp-for="FirstName" id="firstName" />
	</div>

	<div class="mt-3">
		<label for="lastName" class="form-label">Last Name</label>
		<input type="text" class="form-control" asp-for="LastName" id="lastName" />
	</div>

	<div class="mt-3">
		<label class="form-label">Subject</label>
		<input type="text" class="form-control" asp-for="@professorSubject.Name" readonly />
	</div>
</form>

<div class="mt-3">
	<button type="submit" class="btn btn-primary" id="editProfessorButton">Save</button>
</div>

<div class="mt-3">
	<button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Professors" asp-route-id="Id" id="deleteProfessorButton">Delete</button>
</div>

<div class="mt-3">
	<a class="btn btn-dark text-white text-decoration-none" asp-area="" asp-controller="Professors" asp-action="Index">Back to the list</a>
</div>

<script src="~/js/EditProfessor.js" asp-append-version="true"></script>