@using School_Timetable.Models.Entities

@{
	var schoolSubjects = ViewData["schoolSubjects"] as List<SchoolSubject>;
}

@model School_Timetable.Models.ProfessorViewModel

<div class="form-container">
	<div class="back-button-container">
		<a class="back-button" asp-area="" asp-controller="Professors" asp-action="Index">Back to list</a>
	</div>

	<h1>Add Professor</h1>

	<form method="post" id="createProfessorform">
		<div class="mt-3">
			<label for="firstName" class="form-label">First Name</label>
			<input type="text" class="form-control" asp-for="FirstName" id="firstName" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div>
			<label for="lastName" class="form-label">Last Name</label>
			<input type="text" class="form-control" asp-for="LastName" id="lastName" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>

		<div class="mt-3">
			<label for="SchoolSubjectName" class="form-label">Specialization</label>
			<select asp-for="SchoolSubjectId" id="SchoolSubjectName">
				@foreach (var sub in schoolSubjects)
				{
					<option value="@sub.Id">@sub.Name</option>
				}
			</select>
		</div>
	</form>

	<div class="mt-3">
		<button type="submit" class="create-button" id="createProfessorButton">Add Professor</button>
	</div>
</div>

<script src="~/js/CreateProfessor.js" asp-append-version="true"></script>