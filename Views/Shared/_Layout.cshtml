

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>School Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/School_Timetable.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/createDeletePages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/schoolSubjects.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/schoolClasses.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/professor.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img class="logo" src="~/src/SchoolLogo.png" alt="logo" />
            </a>
            <nav>
                <div class="nav-links">
                    <ul>
                        <li class="link">
                            <a asp-area="" asp-controller="SchoolSubjects" asp-action="Index">Subjects</a>
                        </li>
                        <li class="link">
                            <a asp-area="" asp-controller="Professors" asp-action="Index">Professors</a>
                        </li>
                        <li class="link">
                            <a asp-area="" asp-controller="SchoolClasses" asp-action="Index">Classes</a>
                        </li>
                        <li class="link">
                            <ul>
                                <li>
                                    | <span>@User.Identity.Name</span>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Account" asp-action="Info">My account</a>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout">
                                        <button>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img class="logo" src="~/src/SchoolLogo.png" alt="logo" />
            </a>
            <nav>
                <div class="nav-links">
                    <ul>
                        <li class="link">
                            <a asp-area="" asp-controller="Account" asp-action="AllUsers">Users</a>
                        </li>
                        <li class="link">
                            <ul>
                                <li>
                                    | <span>@User.Identity.Name</span>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout">
                                        <button>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        }
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 Made by <a href="https://www.linkedin.com/in/delia-nechita/" target="_blank" title="Delia's website">Delia-Elena Nechita</a></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
